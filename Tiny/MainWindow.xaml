<Window x:Class="Tiny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiny"
        mc:Ignorable="d"
        Title="MainWindow" Height="474" Width="711">
    <Grid>

        <RichTextBox x:Name="input" VerticalScrollBarVisibility="Auto" 
         AcceptsReturn="True" HorizontalAlignment="Left" Height="304" Margin="30,43,0,0"   VerticalAlignment="Top" Width="240">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
       </RichTextBox>
        
        <TextBox x:Name="output" HorizontalAlignment="Left" Height="304" Margin="425,43,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="239"/>
        <Button x:Name="compile" Content="Button" HorizontalAlignment="Left" Margin="300,186,0,0" VerticalAlignment="Top" Width="75" Click="compile_Click"/>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="30,22,0,0" TextWrapping="Wrap" Text="Input" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="300,22,0,0" TextWrapping="Wrap" Text="Output" VerticalAlignment="Top"/>

    </Grid>
</Window>
